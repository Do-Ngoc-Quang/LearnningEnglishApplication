<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout ở trên chiếm 90% chiều cao -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" 
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:text="Welcome back, NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30px"
            android:minHeight="30px"
            android:id="@+id/txt_chaomung"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Quiz game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:src="@drawable/icon_checklist_64px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1" />

            <Button
                android:text="Play now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_playquiz" />


        </LinearLayout>
        

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingTop="20sp"
        android:background="@android:color/transparent">

        <Button
            android:paddingTop="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:id="@+id/btn_home"
            android:drawableTop="@drawable/icon_home_32px"
            android:gravity="center" />

        <Button
            android:paddingTop="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id="@+id/btn_category"
            android:drawableTop="@drawable/icon_category_32px"
            android:gravity="center" />

        <Button
            android:paddingTop="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id="@+id/btn_leaderboard"
            android:drawableTop="@drawable/icon_rank_32px"
            android:gravity="center" />

        <Button
            android:paddingTop="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id="@+id/btn_profile"
            android:drawableTop="@drawable/icon_profile_32px"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
